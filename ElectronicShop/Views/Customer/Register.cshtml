@model Customer
@{
}
<div>
<form asp-action="Register" method="post">
    <p class="bg-danger">@ViewBag.msg</p>
        <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Enter your name</label>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label">Enter your email</label>
        <input type="email" class="form-control" asp-for="@Model.Email" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label">Enter your password</label>
        <input type="password" class="form-control" asp-for="@Model.Password">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Phone" class="form-label">Enter your phone</label>
        <input type="number" class="form-control" asp-for="@Model.Phone">
    </div>
    
    <button type="submit" class="btn btn-primary">Sign Up</button>
        
</form>
</div>
